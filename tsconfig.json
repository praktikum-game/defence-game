{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,

    // Разве есть причина sourceMap отключать?
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"]
  },
  "include": ["src", "typings/**/*.d.ts", "./node_modules/@types"],
  "exclude": ["**/*.js", "./node_modules/"]
}
