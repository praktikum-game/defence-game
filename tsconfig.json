{
  "compilerOptions": {
    "lib": ["dom", "es2017", "dom.iterable"],
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"]
  },
  "include": ["src", "typings/**/*.d.ts", "./node_modules/@types", "./jest-config/jest-setup.ts"],
  "exclude": ["**/*.js", "./node_modules/"]
}
